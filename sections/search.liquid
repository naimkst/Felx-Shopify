<div class="section-header">
  <div class="container">
      <div class="section-header-wrap">
          <p class="header-text">{{ settings.collection_request_quote_text }}</p>
          <a href="{{ settings.request-quote }}" class="outlne-btn">Korting aanvragen</a>
          <button class="finter-button d-block d-md-none">Filters</button>
      </div>
  </div>
</div>

{% render 'mobile-filter' %}


<!-- filter-box area end here  -->
<!-- main-product-section area start here  -->
<div class="main-product-section">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 col-md-12">
              <h2 class="section-title">{{ collection.title }}</h2>
              <div class="row">

                {% if search.results.size > 0 %}
                {% for item in search.results %}
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="single-product-grid">
                            <div class="product-thumbnail">
                                <a href="{{ item.url }}"><img src="{{ item.featured_image.src | img_url: '' }}"
                                        alt="product" /></a>
                            </div>
                            <div class="product-info">
                                <h3 class="product-title"><a href="{{ item.url }}">{{ item.title }}</a></h3>
                                {% if product.price > 0 %}
                                <h5 class="sub-title">{{ item.price | money }}</h5>
                                {% else %}
                                <h5 class="sub-title">{{ settings.Order_on_Request }}</h5>
                                {% endif %}
                            </div>
                        </div>
                    </div>
              {% endfor %}
              {% else %}
              <h2>No data found!</h2>
              {% endif %}

              </div>
          </div>

      </div>
  </div>
</div>
<!-- main-product-section area end here  -->

