<!-- product-category area start here  -->
<div class="product-category-area section">
    <div class="container">
        <div class="row">
            {% assign limit = section.settings.collection_limit %}
            {% for collection in collections limit:limit %}
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <a href="{{ collection.url }}" class="single-category">
                        <img src="{{ collection.featured_image.src | img_url: '' }}" alt="catagory-thumbnail"
                            class="catagory-thumbnail" />
                        <span class="catagory-text">{{ collection.title }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- product-category area end here  -->


{% schema %}
{
    "name": "Home Collection Section",
    "settings":[
        {
            "type": "range",
            "id": "collection_limit",
            "label": "Collection limit",
            "default": 8,
            "min": 1,
            "max": 50
        }
    ],
    "presets": [
      {
        "name": "Home Collection Section"
      }
    ]
}
{% endschema %}